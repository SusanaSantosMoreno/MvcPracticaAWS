@model MvcPracticaAWS.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h3 class="text-center mt-5">Crear Usuario</h3>
<form method="post">
    <div class="card mt-3">
        <div class="card-body">
            <div class="form-group">
                <label>Id Usuario</label>
                <input type="text" class="form-control" name="IdUsuario">
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" name="Nombre">
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                <input type="text" class="form-control" name="Descripcion">
            </div>
            <div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Back to List</a>
            </div>
            <button type="submit" class="btn btn-outline-dark float-right">Guardar</button>
        </div>
    </div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
