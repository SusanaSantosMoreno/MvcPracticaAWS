@model IEnumerable<MvcPracticaAWS.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-3 text-center">Usuarios</h1>
@if (Model.Any()) {
    <a asp-action="Create" class="btn btn-outline-dark float-right mb-3 mt-3">Create New</a>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdUsuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaAlta)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaAlta)
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Home" asp-route-idUsuario="@item.IdUsuario">
                            <i class="bi bi-info-circle-fill text-dark"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Home" asp-route-idUsuario="@item.IdUsuario">
                            <i class="bi bi-pencil-fill text-dark"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Home" asp-route-idUsuario="@item.IdUsuario">
                            <i class="bi bi-dash-circle-fill text-dark"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <h6 class="text-center mt-5">No hay datos, <a asp-action="Create" asp-controller="Home" class="text-dark">crear usuario</a></h6>
}

