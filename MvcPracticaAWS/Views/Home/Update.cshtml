@model MvcPracticaAWS.Models.Usuario

@{
    ViewData["Title"] = "Update";
}

<h3 class="text-center">Editar Usuario</h3>
<form method="post">
    <div class="card mt-3">
        <div class="card-body">
            <div class="form-group">
                <label>Id Usuario</label>
                <input type="text" class="form-control" name="IdUsuario" value="@Model.IdUsuario" readonly>
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" name="Nombre" value="@Model.Nombre">
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                <input type="text" class="form-control" name="Descripcion" value="@Model.Descripcion">
            </div>
            <button type="submit" class="btn btn-outline-dark float-right">Guardar</button>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
